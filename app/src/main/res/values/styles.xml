<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize Tab Text Style. -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8AFFFFFF</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsArticleTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Medium Text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TimeTableTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Medium Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

</resources>
