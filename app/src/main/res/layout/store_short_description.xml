<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/card_no_rounding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">
            <!-- layout for image -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="@dimen/standard_padding">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/storeLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/image_placeholder"
                    android:contentDescription="@string/txt_image_description" />
            </FrameLayout>

            <!-- layout for text (prices). it contains one TextView, but can contain more than one TextView (in future) -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="@dimen/standard_padding">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text_size"/>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/short_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_store_description"
            android:textSize="@dimen/small_text_size"
            android:paddingStart="@dimen/standard_padding"
            android:paddingLeft="@dimen/standard_padding"
            android:paddingEnd="@dimen/standard_padding"
            android:paddingRight="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:gravity="center"/>

    </LinearLayout>
</android.support.v7.widget.CardView>